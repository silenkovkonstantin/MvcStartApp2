﻿@{
    ViewData["Title"] = "View project logs";
}

<style>
    table {
        border-spacing: 0 15px;
        align-self: center;
    }

    th {
        background-color: #4287f5;
        color: white;
    }

    th,
    td {
        width: 150px;
        text-align: center;
        border: 1px solid black;
        padding: 5px;
    }

    h2 {
        color: #4287f5;
    }
</style>

<div class="text-center">
    <h2 class="display-4" style="text-align: left">Информация о проекте</h2>
    <br>
    <table>
        <tr>
            <td>Идентификатор</td>
            <td>Дата</td>
            <td>Url</td>
        </tr>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.Date.Time</td>
                <td>@request.url</td>
            </tr>
        }
    </table>
</div>